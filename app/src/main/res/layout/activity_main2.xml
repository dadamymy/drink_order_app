<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/drink_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="飲料"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <RadioGroup
            android:id="@+id/RG_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="冰塊"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/low_ice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微冰" />

            <RadioButton
                android:id="@+id/less_ice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="少冰" />

            <RadioButton
                android:id="@+id/normal_ice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正常冰" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/RG_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="甜度"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/low_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微糖" />

            <RadioButton
                android:id="@+id/less_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="少糖" />

            <RadioButton
                android:id="@+id/half_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="半糖" />

            <RadioButton
                android:id="@+id/normal_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全糖" />
        </RadioGroup>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit" />

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>